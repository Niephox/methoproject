<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/marker_background"
    >

    <ImageView
        android:id="@+id/infoWindowImageView"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/infoWindowImageView"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:text="City:"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/cityTextView"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoWindowImageView"
        android:layout_toEndOf="@+id/textView3"
        android:layout_toRightOf="@id/textView3"
        android:text="TextView"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignRight="@+id/infoWindowImageView"
        android:layout_below="@+id/textView6"
        android:layout_marginBottom="5dp"
        android:text="Date:"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignRight="@+id/infoWindowImageView"
        android:layout_below="@+id/textView3"
        android:text="Country:"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/countryTextView"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cityTextView"
        android:layout_alignLeft="@id/cityTextView"
        android:layout_below="@+id/textView3"
        android:text="TextView"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countryTextView"
        android:layout_toRightOf="@+id/textView5"
        android:layout_marginBottom="5dp"
        android:text="TextView"
        android:textSize="8sp" />


</RelativeLayout>